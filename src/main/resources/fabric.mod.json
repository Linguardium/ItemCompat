{
  "schemaVersion": 1,
  "id": "itemcompat",
  "version": "${version}",

  "name": "Item Compatibility",
  "description": "Enables custom shears to work as shears",
  "authors": [
    "Linguardium"
  ],
  "contact": {
    "homepage": "https://github.com/Linguardium/ItemCompat",
    "sources": "https://github.com/Linguardium/ItemCompat"
  },

  "license": "MIT",
  "icon": "assets/itemcompat/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "mod.linguardium.itemcompat.ItemCompat"
    ]
  },
  "mixins": [
    "itemcompat.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.2",
    "fabric": "*",
    "minecraft": "1.15.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
